<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator
                android:duration="@integer/textAnimatorDuration">
                <propertyValuesHolder android:propertyName="textSize"
                    android:valueTo="@dimen/fontSize_normalSelected"
                    android:valueType="floatType"/>
            </objectAnimator>
        </set>
    </item>

    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="@integer/textAnimatorDuration">
                <propertyValuesHolder android:propertyName="textSize"
                    android:valueTo="@dimen/fontSize_normalSelected"
                    android:valueType="floatType"/>
            </objectAnimator>
        </set>
    </item>

    <item >
        <set>
            <objectAnimator
                android:duration="@integer/textAnimatorDuration">
            <propertyValuesHolder android:propertyName="textSize"
                android:valueTo="@dimen/fontSize_normal"
                android:valueType="floatType"/>
            </objectAnimator>
        </set>
    </item>
</selector>