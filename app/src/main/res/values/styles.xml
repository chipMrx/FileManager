<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <style name="AppThemeNonBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CustomActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="FullscreenNoActionBar" parent="AppThemeNonBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.MajesticReader.Tab" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Dialog_title">
        <item name="android:layout_height">@dimen/barHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_dialog_header</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="textType">big</item>
    </style>




    <!-- //////////////////////////////////// -->
    <!-- fragment -->
    <!-- //////////////////////////////////// -->
    <style name="inp_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="showRightImage">alwaysShow</item>
        <item name="android:imeActionLabel">@string/lbl_search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/lbl_search</item>
        <item name="rightIcon">@drawable/ic_search</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="inp_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="showRightImage">alwaysShow</item>
        <item name="android:imeActionLabel">@string/lbl_search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/lbl_search</item>
        <item name="rightIcon">@drawable/ic_search</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="inp_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:label">@string/lbl_description</item>
        <item name="inputMaxLength">huge</item>
        <item name="showRightImage">alwaysHide</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="inp_content" parent="inp_description">
        <item name="android:minLines">10</item>
        <item name="android:maxLines">20</item>
    </style>

    <style name="barrier_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="barrierDirection">bottom</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="rev_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="btn_add_list">
        <item name="android:layout_width">@dimen/imageSmall</item>
        <item name="android:layout_height">@dimen/imageSmall</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="buttonType">icon</item>
        <item name="android:background">@drawable/ic_add</item>
    </style>

    <!-- //////////////////////////////////// -->
    <!-- activity -->
    <!-- //////////////////////////////////// -->
  
    <style name="progress_wait">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:text">@string/msg_loading</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <!-- //////////////////////////////////// -->
    <!-- item -->
    <!-- //////////////////////////////////// -->
    <style name="llt_item_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
    </style>

    <item name="lltHeader" type="id"/>
    <style name="llt_item_header">
        <item name="android:id">@id/lltHeader</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dialog_header</item>
        <item name="android:clickable">false</item>
        <item name="android:divider">@drawable/divider_app</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="txt_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:ellipsize">end</item>
        <item name="textType">normal</item>
    </style>

    <style name="txt_item_content" parent="txt_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">5</item>
        <item name="textType">small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
    </style>

    <style name="chk_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imageMenu</item>
        <item name="android:button">@drawable/btn_selection</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>


</resources>
