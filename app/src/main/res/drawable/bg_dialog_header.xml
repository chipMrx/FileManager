<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/margin_small"
                android:top="@dimen/margin_small"
                android:right="@dimen/margin_small"
                android:bottom="@dimen/margin_small"/>
            <corners android:topLeftRadius="@dimen/margin_small"
                android:topRightRadius="@dimen/margin_small"/>
            <stroke android:color="@color/black_overlayLight" android:width="1dp"/>
            <solid android:color="@color/colorPrimaryLight"/>
        </shape>
    </item>
</layer-list>