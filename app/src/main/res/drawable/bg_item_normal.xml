<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_overlayLight"/>
            <corners android:radius="@dimen/margin_small" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <padding android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/margin_small" />
            <stroke android:color="@color/black_overlay" android:width="1dp"/>
        </shape>
    </item>
</layer-list>