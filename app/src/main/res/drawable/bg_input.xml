<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/margin_small"/>
            <stroke android:color="@color/black_overlay" android:width="1dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <corners android:radius="@dimen/margin_small"/>
            <stroke android:color="@color/colorInputStrokeActive" android:width="1dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <corners android:radius="@dimen/margin_small"/>
            <stroke android:color="@color/colorInputStrokeActive" android:width="1dp"/>
            <solid android:color="@color/colorInputBgActive"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="@dimen/margin_small"/>
            <stroke android:color="@color/colorInputStrokeActive" android:width="1dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="@dimen/margin_small"/>
            <stroke android:color="@color/black_overlay" android:width="1dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>